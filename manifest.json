{
  "manifest_version": 3,
  "name": "Map Diff",
  "version": "1.1.0",
  "description": "Shows win rate differences per map on the Overwatch Hero Statistics page",
  "permissions": ["storage"],
  "host_permissions": [
    "https://overwatch.blizzard.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://overwatch.blizzard.com/*/rates/*"],
      "js": ["defaults.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://overwatch.blizzard.com/*/rates/*"],
      "js": ["main-world.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
